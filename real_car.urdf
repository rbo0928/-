<?xml version="1.0"?>
<robot name="autonomous_car">
  
  <!-- Base Link (Chassis) -->
  <link name="base_link">
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
   <visual>
      <geometry>
        <mesh filename="car.obj" scale="0.05 0.05 0.05"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.8 0.3 0.15"/>
      </geometry>
    </collision>
  </link>
  
  <!-- Front Left Wheel -->  
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <mesh filename="wl.obj" scale="0.05 0.05 0.05"/>
      </geometry>
      <material name="white">
        <color rgba="255 255 255 255"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.06" length="0.06"/>
      </geometry>
    </collision>
  </link>
  <!-- 將車輪旋轉 90 度，使得輪子的幾何外觀從原本「橫放」改為沿 Y 軸排列，並設定關節旋轉軸沿 Y 軸，讓車輪滾動產生的推進方向為 X 軸 -->
  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.28 0.15 -0.11" rpy="-1.57 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  
  
  <!-- Front Right Wheel -->
  <link name="front_right_wheel">
   <visual>
      <geometry>
        <mesh filename="wlr.obj" scale="0.05 0.05 0.05"/>
      </geometry>
      <material name="white">
        <color rgba="255 255 255 255"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.06" length="0.06"/>
      </geometry>
    </collision>
  </link>
  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.28 -0.15 -0.11" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  
  <!-- Rear Left Wheel -->
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <mesh filename="wl.obj" scale="0.05 0.05 0.05"/>
      </geometry>
      <material name="white">
        <color rgba="255 255 255 255"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.06" length="0.06"/>
      </geometry>
    </collision>
  </link>
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.28 0.15 -0.11" rpy="-1.57 0 0"/>
    <axis xyz="0 1 1"/>
  </joint>
  
  <!-- Rear Right Wheel -->
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <mesh filename="wlr.obj" scale="0.05 0.05 0.05"/>
      </geometry>
      <material name="white">
        <color rgba="255 255 255 255"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.06" length="0.06"/>
      </geometry>
    </collision>
  </link>
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.28 -0.15 -0.11" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Camera Link -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="grey">
        <color rgba="0.25 0.25 0.25 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>
  </link>
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.05 0 0.19"  rpy="0 0 0"/>
  </joint>
</robot>